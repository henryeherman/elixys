<?xml version="1.0" encoding="utf-8"?>
<Views:ViewBase xmlns:fx="http://ns.adobe.com/mxml/2009" xmlns:s="library://ns.adobe.com/flex/spark" xmlns:mx="library://ns.adobe.com/flex/mx"
		xmlns:Views="Elixys.Views.*" width="100%" height="100%">
	<fx:Script>
		<![CDATA[
			import Elixys.Events.HTTPRequestEvent;
			import Elixys.HTTP.HTTPRequest;
			import Elixys.Objects.Component;
			import Elixys.Objects.ComponentEvaporate;
			import Elixys.Objects.Reagent;

			// Called when component details arrive from the server
			public override function UpdateStateComponent(pComponent:Component):void
			{
				var pComponentEvaporate:ComponentEvaporate = new ComponentEvaporate(null, pComponent);
				_outputText.text = "Evaporate reactor " + pComponentEvaporate.Reactor + " at " + pComponentEvaporate.EvaporationTemperature +
					" C for " + pComponentEvaporate.Duration + " and cool to " + pComponentEvaporate.FinalTemperature + " C.  Stir at " +
					pComponentEvaporate.StirSpeed + " rpm.";
			}
		]]>
	</fx:Script>
	
	<s:VGroup horizontalAlign="center" verticalAlign="middle" horizontalCenter="0" verticalCenter="0" width="100%" height="100%">
		<mx:Text id="_outputText" styleName="label" width="80%" />		
	</s:VGroup>
</Views:ViewBase>
