<?xml version="1.0" encoding="utf-8"?>
<Views:SubviewBase xmlns:fx="http://ns.adobe.com/mxml/2009" xmlns:s="library://ns.adobe.com/flex/spark" xmlns:mx="library://ns.adobe.com/flex/mx"
		xmlns:Views="Elixys.Views.*" width="100%" height="100%">
	<fx:Script>
		<![CDATA[
			import mx.events.FlexEvent;

			/***
			 * Member functions
			 **/

			// Set the display text
			public function SetText(sText:String):void
			{
				_message.text = sText;
			}

			/***
			 * Message handlers
			 **/
			
			// Called when creation is complete
			protected override function OnCreationComplete(event:FlexEvent):void
			{
				// Call the base implementation
				super.OnCreationComplete(event);

				// Set the base class variables
				m_pViewGroup = _allGroups;
				m_pEditGroup = null;
				m_pRunGroup = null;
				
				// Set our view mode
				SetViewMode(SubviewBase.VIEWMODE);
			}
			
			/**
			 * Member variables
			 **/
			
			// Type
			static public var TYPE:String = "MESSAGE";
		]]>
	</fx:Script>
	
	<s:VGroup width="100%" height="100%">
		<s:VGroup id="_allGroups" visible="false" includeInLayout="false" horizontalAlign="center" verticalAlign="middle"
				horizontalCenter="0" verticalCenter="0" width="100%" height="100%">
			<s:Label id="_message" styleName="TextMedium" width="80%" />
		</s:VGroup>
	</s:VGroup>
</Views:SubviewBase>
