<?xml version="1.0" encoding="utf-8"?>
<mx:VBox xmlns:fx="http://ns.adobe.com/mxml/2009" xmlns:s="library://ns.adobe.com/flex/spark" xmlns:mx="library://ns.adobe.com/flex/mx"
		width="100%" height="100%">
	<fx:Declarations>
		<fx:Component id="_sequenceRenderer">
			<s:ItemRenderer>
				<s:states>
					<s:State name="normal" />
					<s:State name="hovered" />
					<s:State name="selected" />
				</s:states>
				<s:Rect left="0" right="0" top="0" bottom="0">
					<s:fill>
						<s:SolidColor color="0x999999" alpha="0" alpha.hovered="0.2"
									  alpha.selected="0.6" />
					</s:fill>
				</s:Rect>
				<s:Label id="nameLabel" text="{data.Name()}" styleName="label" paddingTop="15" paddingBottom="15" paddingRight="20" paddingLeft="20" />
			</s:ItemRenderer>
		</fx:Component>
	</fx:Declarations>
	
	<s:VGroup paddingLeft="20" paddingRight="20" paddingTop="10" paddingBottom="0" width="100%" height="100%">
		<s:List id="_sequenceList" itemRenderer="{_sequenceRenderer}" requireSelection="true" width="100%" height="100%" />
		<s:Spacer height="10" />
		<s:HGroup id="_buttons" horizontalAlign="center" verticalAlign="middle" horizontalCenter="0" verticalCenter="0" gap="20" width="100%" />
		<s:Spacer height="10" />
	</s:VGroup>
</mx:VBox>
