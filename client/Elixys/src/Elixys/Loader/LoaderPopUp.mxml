<?xml version="1.0" encoding="utf-8"?>
<mx:Panel xmlns:fx="http://ns.adobe.com/mxml/2009" xmlns:s="library://ns.adobe.com/flex/spark" xmlns:mx="library://ns.adobe.com/flex/mx"
		headerHeight="0" modalTransparencyColor="0x444444" width="400" >
	<!--	backgroundColor="0xcdcdcd" borderColor="0x333333" 	-->
	<fx:Script>
		<![CDATA[
			import mx.managers.PopUpManager;
			
			// Set the progress bar
			public function SetProgress(nPercentComplete:uint):void
			{
				_progress.setProgress(nPercentComplete, 100);
			}
			
			public function OnCancel():void
			{
				// Remove the popup window
				PopUpManager.removePopUp(this);
			}
		]]>
	</fx:Script>
	
	<s:VGroup horizontalAlign="center" verticalAlign="middle" paddingLeft="15" paddingRight="15" paddingTop="15" paddingBottom="15"
			width="100%" height="100%">
		<mx:Label text="Please wait, connecting to server..." />
		<s:Spacer height="10" />
		<mx:ProgressBar id="_progress" label="" labelPlacement="center" mode="manual" width="80%" />
		<s:Spacer height="10" />
		<mx:Button id="_cancel" label="Cancel" click="OnCancel();" />
	</s:VGroup>
</mx:Panel>
